---
type Props = {
    title: string;
    value: string;
};

const { title, value } = Astro.props;
---

<article>
    <p>{title}</p>
    <div>
        <p>{value}</p>
    </div>
</article>

<style>
    article {
        min-width: 270px;
        height: 170px;
        padding: 1rem;
        border-radius: 5px;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        background-color: var(--glass-color);
        color: var(--neutral-50);
        backdrop-filter: var(--blur-effect);
    }

    article > div {
        flex: 1;
        display: grid;
        place-items: center;
    }

    article > div > p {
        text-align: center;
        font-size: 3rem;
        font-weight: 500;
    }
</style>
