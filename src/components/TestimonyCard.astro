---
import UserIcon from "@icons/UserIcon.astro";

type Props = {
    name: string;
    time: string;
    testimony: string;
    gridArea: string;
    position: string;
};

const { name, time, testimony, gridArea, position } = Astro.props;
---

<article>
    <header>
        <figure>
            <UserIcon width={32} height={32} color="var(--neutral-50)" />
        </figure>
        <div>
            <h6>{name}</h6>
            <p>{time}</p>
        </div>
    </header>
    <main>
        <p>{testimony}</p>
    </main>
</article>

<style define:vars={{ gridArea, position }}>
    article {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 1.5rem;
        padding: 2rem;
        border-radius: 5px;
        background-color: var(--neutral-50);
        box-shadow: var(--box-shadow);
        grid-area: var(--gridArea);
        animation: revealTestimony linear both;
        animation-timeline: view();
        animation-range: entry 20% cover 25%;
        width: fit-content;
        height: fit-content;
        transition: box-shadow 0.3s ease-in-out, scale 0.3s ease-in-out;
    }

    article:hover {
        z-index: 1;
        box-shadow: var(--box-shadow-hover);
        scale: 1.025;
    }

    article > header {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    article > header > figure {
        display: grid;
        place-items: center;
        padding: 0.75rem;
        border-radius: 50%;
        background-color: var(--neutral-900);
    }

    article > header > div {
        display: flex;
        flex-direction: column;
        gap: 0rem;
    }

    article > header > div > p {
        font-size: 0.75rem;
        color: var(--neutral-700);
    }

    article > main > p {
        max-width: 50ch;
    }

    @keyframes revealTestimony {
        from {
            translate: var(--position);
        }
        to {
            translate: 0 0;
        }
    }
</style>

