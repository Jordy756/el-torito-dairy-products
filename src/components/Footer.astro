---
import { Image } from "astro:assets";
import WhatsappIcon from "@icons/WhatsappIcon.astro";
import FacebookIcon from "@icons/FacebookIcon.astro";
import InstagramIcon from "@icons/InstagramIcon.astro";
import { basics } from "@data";

type Props = {
    backgroundColor: "var(--primary-700)" | "transparent";
};

const { backgroundColor } = Astro.props;
const { name, logo, slogan, socialNetworks } = basics;
const year = new Date().getFullYear();

const SOCIAL_NETWORKS: Record<string, string | any> = {
    Whatsapp: WhatsappIcon,
    Facebook: FacebookIcon,
    Instagram: InstagramIcon,
};
---

<footer>
    <section>
        <div>
            <a href="/#">
                <Image src={logo} alt={`Logo de ${name}`} width={1} height={1} />
            </a>
            <p>{slogan}</p>
        </div>
        <nav>
            <div>
                <h6>Empresa</h6>
                <ul>
                    <li><a href="/#about-us">Sobre nosotros</a></li>
                    <li><a href="/#products">Nuestros productos</a></li>
                    <li><a href="/#testimonies">Testimonios</a></li>
                    <li><a href="/#our-team">Nuestro equipo</a></li>
                    <li><a href="/#FAQ">Preguntas frecuentes</a></li>
                    <li><a href="/#contact-us">Contáctanos</a></li>
                </ul>
            </div>
            <div>
                <h6>Legal</h6>
                <ul>
                    <li><a href="/#politicas">Privacidad</a></li>
                    <li><a href="/#terminos">Términos</a></li>
                </ul>
            </div>
        </nav>
    </section>
    <div></div>
    <section>
        <p>© {year} {name}. Todos los derechos reservados.</p>
        <ul>
            {
                socialNetworks.map(({ network, url }) => {
                    const Icon = SOCIAL_NETWORKS[network];
                    return (
                        <a href={url} target="_blank" rel="noopener noreferrer">
                            <Icon color="var(--neutral-50)" width={24} height={24} />
                        </a>
                    );
                })
            }
        </ul>
    </section>
</footer>

<style define:vars={{ backgroundColor }}>
    footer {
        padding: 1rem;
        background-color: var(--backgroundColor);
        color: var(--neutral-50);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    footer > div {
        height: 1px;
        width: min(100%, var(--max-width));
        background-color: var(--neutral-50);
    }

    footer > section {
        width: min(100%, var(--max-width));
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 2rem;
    }

    footer > section > div {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        flex: 1;
    }

    footer > section > ul,
    footer > section > div > a,
    footer > section > ul > li > a {
        display: flex;
    }

    footer > section > div > a > img {
        width: 100px;
        height: auto;
        object-fit: contain;
    }

    footer > section > nav {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    footer > section > nav > div,
    footer > section > nav > div > ul {
        display: flex;
        flex-direction: column;
    }

    footer > section > nav > div {
        gap: 1rem;
    }

    footer > section > nav > div > ul {
        gap: 0.5rem;
    }

    footer > section > nav > div > ul > li::before {
        content: "";
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 1px;
        background-color: var(--neutral-50);
        transition:
            transform 0.3s ease-in-out,
            width 0.3s ease-in-out;
    }

    footer > section > nav > div > ul > li {
        position: relative;
    }

    footer > section > nav > div > ul > li:hover::before {
        width: 100%;
        transform: translateX(-50%);
    }

    footer > section > nav > div > ul > li > a {
        color: var(--neutral-200);
    }

    footer > section > ul {
        gap: 1rem;
    }

    footer > section > ul > li > a {
        transition: scale 0.3s ease-in-out;
    }

    footer > section > ul > li:hover > a {
        scale: 1.1;
    }

    @media screen and (width <= 650px) {
        :is(
                footer > section,
                footer > section > div,
                footer > section > nav,
                footer > section > nav > div,
                footer > section > nav > div > ul
            ) {
            align-items: center;
        }

        :is(footer > section, footer > section > nav) {
            flex-direction: column;
        }

        :is(footer > section > div, footer > section > p) {
            text-align: center;
        }
    }
</style>
