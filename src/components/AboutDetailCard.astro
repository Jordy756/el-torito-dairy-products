---
import { Image } from "astro:assets";

type Props = {
    number: string;
    title: string;
    image: string;
    content: string;
};

const { number, image, title, content } = Astro.props;
---

<article>
    <div>
        <div>
            <span>{number}</span>
            <Image src={image} alt={`Imagen de ${title}`} width="400" height="500" />
        </div>
        <div>
            <h3>{title}</h3>
            <p>{content}</p>
        </div>
    </div>
</article>

<style>
    article {
        height: 500px;
        display: flex;
        align-items: center;
        animation: revealAboutDetailCard linear both;
        animation-timeline: view();
        animation-range: entry 30% cover 50%;
    }

    article > div {
        display: flex;
        gap: 1rem;
    }

    article > div > div {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: start;
        gap: 0.5rem;
    }

    article > div > div > span {
        display: block;
        font-size: 1.25rem;
        border-bottom: 1px solid var(--neutral-900);
        padding-bottom: 1rem;
    }

    article > div > div:first-child {
        position: relative;
    }

    article > div > div:first-child > img {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 400px;
        height: 500px;
        object-fit: cover;
        border-radius: 5px;
    }

    @keyframes revealAboutDetailCard {
        from {
            opacity: 0;
            translate: 50% 50%;
        }
        to {
            opacity: 1;
            translate: 0 0;
        }
    }
</style>
