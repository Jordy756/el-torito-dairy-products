---
import { Image } from "astro:assets";

type Props = {
    number: string;
    title: string;
    image: string;
    content: string;
};

const { number, image, title, content } = Astro.props;
---

<article>
    <div>
        <span>{number}</span>
        <Image src={image} alt={`Imagen de ${title}`} width="400" height="300" />
    </div>
    <div>
        <h3>{title}</h3>
        <p>{content}</p>
    </div>
</article>

<style>
    article {
        height: 500px;
        display: flex;
        gap: 1rem;
        /* background-color: aqua; */
    }

    div {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 0.5rem;
        height: 100%;
    }

    div:first-child {
        position: relative;
    }

    span {
        display: block;
        font-size: 1.25rem;
        border-bottom: 1px solid var(--neutral-900);
        padding-bottom: 1rem;
    }

    img {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        width: 400px;
        height: 100%;
        object-fit: cover;
        border-radius: 5px;
    }
</style>
