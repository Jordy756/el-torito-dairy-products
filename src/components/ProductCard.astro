---
import { Image } from "astro:assets";

type Props = {
    name: string;
    image: string;
    description: string;
    gridArea: string;
};

const { name, image, description, gridArea } = Astro.props;
---

<article>
    <div>
        <h5>{name}</h5>
        <p>{description}</p>
    </div>
    <Image src={`/src/assets/images/products/${image}.webp`} alt={`Imagen del producto ${name}`} width={1} height={1} />
</article>

<style define:vars={{ gridArea }}>
    article::before {
        content: "";
        position: absolute;
        inset: 0;
        background-color: var(--image-background);
        z-index: 1;
    }

    article {
        position: relative;
        grid-area: var(--gridArea);
        border-radius: 5px;
        overflow: hidden;
        animation: revealProduct linear both;
        animation-timeline: view();
        animation-range: entry 15% cover 20%;
    }

    article > div {
        padding: 1rem;
        position: absolute;
        bottom: 0;
        z-index: 2;
        color: var(--neutral-50);
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        width: 100%;
    }

    article > div > p {
        font-size: 0.9rem;
        overflow: hidden;
        max-height: 0;
        transition: max-height 0.5s ease-in-out;
    }

    article:hover > div > p {
        max-height: 300px;
    }

    article > img {
        position: absolute;
        inset: 0;
        object-fit: cover;
        object-position: center;
        width: 100%;
        height: 100%;
        transition: scale 0.3s ease-in-out;
    }

    article:hover > img {
        scale: 1.1;
    }

    @keyframes revealProduct {
        from {
            opacity: 0;
            transform: translateY(50%);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
