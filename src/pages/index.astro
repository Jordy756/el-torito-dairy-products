---
import Layout from "@layouts/Layout.astro";
import Banner from "@sections/Banner.astro";
import AboutUs from "@sections/AboutUs.astro";
import Products from "@sections/Products.astro";
import Testimonies from "@sections/Testimonies.astro";
import OurTeam from "@sections/OurTeam.astro";
import FAQ from "@sections/FAQ.astro";
import Contact from "@sections/Contact.astro";
import Footer from "@components/Footer.astro";
import Toast from "@components/Toast.astro";

import { basics } from "@data";

const { name } = basics;
---

<Layout title={name}>
    <div>
        <Banner />
        <main>
            <AboutUs />
            <Products />
            <Testimonies />
            <OurTeam />
            <FAQ />
            <Contact />
        </main>
        <Footer />
        <Toast />
    </div>
</Layout>

<style>
    div {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 3rem;
        position: relative;
    }

    div > main {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        width: min(100%, var(--max-width));
    }
</style>
