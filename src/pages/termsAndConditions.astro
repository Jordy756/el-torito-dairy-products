---
import Layout from "@layouts/Layout.astro";
import PoliciesSection from "@sections/PoliciesSection.astro";
import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";

import { basics, termsAndConditions } from "@data";

const { name } = basics;
const { title, description, content } = termsAndConditions;
---

