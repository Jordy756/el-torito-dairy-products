---
import Actionable from "@components/Actionable.astro";

import { basics, bannerSection } from "@data";

const { name, summary } = basics;
const { bannerImages } = bannerSection;
---

<section class="hero">
    <article>
        <h1 translate="no">{name}</h1>
        <p>{summary}</p>
        <Actionable type="CTA" className="primary" href="/#products">Ver productos</Actionable>
    </article>
    <div id="carousel-controls">
        {bannerImages.map((_, index) => <span>{(index + 1).toString().padStart(2, "0")}</span>)}
    </div>
</section>

<style>
    section {
        flex: 1;
        width: min(100%, var(--max-width));
        color: var(--neutral-50);
        display: flex;
        align-items: start;
        justify-content: space-between;
        gap: 2rem;
    }

    section > div,
    section > article {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    section > article > p {
        max-width: 50ch;
    }

    section > article {
        align-items: start;
    }

    section > div {
        align-items: center;
    }

    section > div > span {
        font-size: 1rem;
        transition:
            font-size 0.3s ease-in-out,
            font-weight 0.3s ease-in-out;
    }

    section > div > span.active {
        font-size: 1.75rem;
        font-weight: var(--font-weight-title);
    }

    @media screen and (width <= 480px) {
        section > div {
            display: none;
        }
    }
</style>

<script src="../scripts/handleCarouselControls.ts"></script>
